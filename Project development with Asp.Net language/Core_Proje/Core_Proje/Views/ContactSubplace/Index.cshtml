@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "ContactSubplace", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Alt İletişim Bilgileri Düzenleme Paneli </p>
                <form class="forms-sample">

                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x=>x.ContacID, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Title, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Yaş</label>
                        @Html.TextBoxFor(x=>x.Phone, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        @Html.TextBoxFor(x=>x.Mail, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label>Adres</label>
                        @Html.TextBoxFor(x=>x.Description, new { @class = "form-control"})
                    </div>                  
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-danger">İptal</button>
                </form>
            </div>
        </div>
    </div>
    <button class="btn btn-success">Güncelle</button>
}



